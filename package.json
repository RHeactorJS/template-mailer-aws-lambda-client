{
  "name": "template-mailer-aws-lambda-client",
  "version": "0.0.1",
  "description": "A client library for interacting with template-mailer-aws-lambda",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha --reporter=spec test/\\*.js",
    "test:coverage": "./node_modules/istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec test/\\*.js && cat ./coverage/lcov.info | ./node_modules/.bin/codacy-coverage && rm -rf ./coverage",
    "lint": "./node_modules/.bin/standard *.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ResourcefulHumans/template-mailer-aws-lambda-client.git"
  },
  "author": "Resourceful Humans <info@resourceful-humans.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ResourcefulHumans/template-mailer-aws-lambda-client/issues"
  },
  "homepage": "https://github.com/ResourcefulHumans/template-mailer-aws-lambda-client#readme",
  "dependencies": {
    "lodash": "^4.0.0",
    "request-promise": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "codacy-coverage": "^1.1.3",
    "eslint": "^1.10.3",
    "ghooks": "^1.2.0",
    "istanbul": "^0.4.2",
    "mocha": "^2.3.4",
    "mocha-lcov-reporter": "^1.0.0",
    "standard": "^6.0.8",
    "validate-commit-msg": "^2.5.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg"
    }
  }
}
